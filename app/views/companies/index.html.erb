<div class="container">
<%= render 'form' %>
    <table class="table">
        <tr>
            <th>Company Name</th>
            <th>Company Employees</th>
            <th>Company Address</th>
        </tr>

        <% @companies.each do |company| %>
            <tr>
                <td><%= company.name %></td>
                <td><%= company.e_count %></td>
                <td><%= company.address %></td>    
            </tr>
        <% end %>
    </table>

</div>

    

