<%= form_with model: @company do |form| %>
    <div>
        <strong>Company Name</strong>
        <%= form.text_field :name, class:'form-control'%>
    </div>

    <div>
        <strong>Company Employees Number</strong>
        <%= form.text_field :e_count, class:'form-control' %>
    </div>

    <div>
        <strong>Company Address</strong>
        <%= form.text_field :address, class:'form-control' %>
    </div>

            <strong>Select Project</strong>

    <div class="row">
            <%= collection_check_boxes(:company, :project_ids, Project.all,:id,:name) do |b|%>
                <%#=b.inspect%>
                    <%= b.label class:"label-checkbox" do%>
                    <%= b.text!="" ? b.check_box + b.text : "" %>
                <%end%> 
            <%end%>
        </div>

    <div>
        <%= form.submit class:'btn btn-success my-3' %>
    </div>
<%end%>