<section>
    <%= form_with model: @tution do |form| %>
    <div class="fields">
        <strong>Tution Name</strong>
        <%= form.text_field :name, class:'form-control'%>
    </div>

    <div class="fields">
        <strong>Tution Address</strong>
        <%= form.text_field :address, class:'form-control' %>
    </div>

    <div class="fields">
        <%= form.submit class:'btn btn-primary my-2'  %>
    </div>
<%end%>
</section>
